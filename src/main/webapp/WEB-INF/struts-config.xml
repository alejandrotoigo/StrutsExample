<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean name="personaForm" type="forms.PersonaForm" />
	</form-beans>

	<action-mappings>
		<action path="/createUpdatePersona" type="actions.CreateUpdateAction"
			name="personaForm" scope="request" input="/Persona.jsp">
			<forward name="success" path="/listPersona.do" />
			<forward name="failure" path="/Persona.jsp" />
		</action>
		<action path="/listPersona" type="actions.ListPersonaAction">
			<forward name="success" path="/Personas.jsp" />
		</action>
		<action path="/delete" type="actions.DeletePersonaAction">
			<forward name="success" path="/Index.jsp" />
		</action>
		<action path="/createUpdate" type="actions.NuevaPersonaAction">
			<forward name="success" path="/Persona.jsp" />
		</action>
	</action-mappings>
	<controller
		processorClass="org.apache.struts.action.RequestProcessor" />
	<message-resources parameter="ApplicationResource" />

	<plug-in
		className="org.apache.struts.validator.ValidatorPlugIn">

		<set-property
			value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"
			property="pathnames" />

	</plug-in>
</struts-config>